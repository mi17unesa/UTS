<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StafActivity">

    <EditText
        android:id="@+id/edtNamaStaff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:hint="Masukkan Nama"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edtNipStaff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:hint="Masukkan Nip"
        app:layout_constraintTop_toTopOf="@id/edtNamaStaff"
        tools:layout_editor_absoluteX="0dp"/>

    <EditText
        android:id="@+id/edtAlamatStaff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:hint="Masukkan Alamat"
        app:layout_constraintTop_toTopOf="@id/edtNipStaff"
        tools:layout_editor_absoluteX="0dp"/>
    <EditText
        android:id="@+id/edtSKS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:inputType="number"
        android:hint="Masukkan Kehadiran"
        app:layout_constraintTop_toTopOf="@id/edtAlamatStaff"
        tools:layout_editor_absoluteX="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHitungStaff"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSKS">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Hitung"
            android:textAlignment="center"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvResultStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Hasil"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvHitungStaff" />


</androidx.constraintlayout.widget.ConstraintLayout>