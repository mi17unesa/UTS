<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff_Activity">


    <TextView
        android:id="@+id/tv_judulstaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hitung Staff"
        android:textSize="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#000"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_namastaff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:hint="Nama"
            android:inputType="text"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000"
            app:layout_constraintTop_toTopOf="@id/tv_judulstaff"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/et_nipstaff"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:hint="NIP"
            android:inputType="text"
            android:textColor="#000"
            app:layout_constraintTop_toTopOf="@id/et_namastaff"
            tools:layout_editor_absoluteX="0dp"/>

        <EditText
            android:id="@+id/et_alamatstaff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="48dp"
            android:inputType="text"
            android:hint="Alamat"
            android:textColor="#000"
            app:layout_constraintTop_toTopOf="@id/et_nipstaff"
            tools:layout_editor_absoluteX="0dp"/>
        <EditText
            android:id="@+id/et_kehadiranstaff"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:inputType="number"
            android:hint="Kehadiran"
            app:layout_constraintTop_toTopOf="@id/et_alamatstaff"
            tools:layout_editor_absoluteX="0dp"/>


    <Button
        android:id="@+id/btn_hitungstaff"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Hitung"
        android:elevation="5dp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_kehadiranstaff"/>

        <TextView
            android:id="@+id/tv_hasilStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Hasil"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_hitungstaff" />


    </androidx.constraintlayout.widget.ConstraintLayout>

